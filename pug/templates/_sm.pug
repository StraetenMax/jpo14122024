        block headSM
            include ../includes/sm/_headSM
        //- bloc article sm
        block imgSM 
            include ../includes/sm/_imgSM
        //- bloc signature Sandrine
        block signSandrine
            include ../includes/sm/_signSandrine
        //- bloc article sm
        block textSM
            include ../includes/sm/_textSM
        //- bloc button
        block button
            include ../includes/_button
        //- bloc partenaires hôtellerie
        block partSM
            include ../includes/sm/_partSM
        //- bloc syrendre
        block transport
            include ../includes/_transport
        //- bloc footer
        block footer
            include ../includes/_footer 
        //- bloc reglement
        block reglement
            include ../includes/_legislation